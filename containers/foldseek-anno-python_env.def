Bootstrap: docker
From: python:3.12-slim

%files
    requirements.txt /deps/requirements.txt

%post
    python -m venv /opt/venv
    /opt/venv/bin/pip install --upgrade pip

    /opt/venv/bin/pip install -r /deps/requirements.txt

%environment
    export PATH=/opt/venv/bin:$PATH
    export PYTHONUNBUFFERED=1

%runscript
    exec "$@"


